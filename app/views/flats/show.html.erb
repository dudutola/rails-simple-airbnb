<div class="d-flex gap-4 mb-5">
  <%= link_to "Edit Flat", edit_flat_path(@flat), class: "btn btn-primary" %>
  <%= link_to "Remove", flat_path(@flat),
                data: {turbo_method: :delete,
                turbo_confirm: "Are you sure?"},
                class: "btn btn-danger"
  %>
</div>

<div class="d-flex gap-4">
  <section class="d-flex flex-column gap-2">
    <div class="card bg-light p-4 shadow-sm">
      <h1 class="card-title fs-2"><%= @flat.name %></h1>
      <p class="card-text"><%= @flat.address %></p>
    </div>

    <div class="card bg-light p-4 shadow-sm">
      <h2 class="fs-4">A bit more about this flat...</h2>
      <p class="card-text"><%= @flat.description %></p>
    </div>

    <div class="card bg-light p-4 shadow-sm">
      <h2 class="fs-4">Details</h2>
      <div class="d-flex gap-3">
        <div>
          <i class="fa-solid fa-user-group"></i>
          <span><%= @flat.number_of_guests %></span>
        </div>
        <div>
          <i class="fa-solid fa-euro-sign"></i>
          <span><%= @flat.price_per_night %></span>
        </div>
      </div>
    </div>
  </section>

  <section class="d-flex flex-column gap-3">
    <div class="card bg-light p-4 shadow-sm">
      <h3>Book this place!</h3>
      <form action="#" class="d-flex flex-column gap-2">
        <div class="d-flex">
          <label for="from_date" class="bg-secondary border bg-opacity-25 p-1 px-2">From:</label>
          <input type="text" id="from_date" name="from_date" class="form-control px-2" placeholder="26/02/2025">
        </div>

        <div class="d-flex">
          <label for="to_date" class="bg-secondary border bg-opacity-25 p-1 px-2">To:</label>
          <input type="text" id="to_date" name="to_date" class="form-control px-2" placeholder="28/02/2025">
        </div>

        <input type="submit" value="Book" class="btn btn-success">
      </form>

    </div>

    <div class="d-flex flex-row justify-content-between card bg-light p-4 shadow-sm">
      <span><strong>Share</strong></span>
      <div>
        <i class="fa-brands fa-square-facebook fs-4"></i>
        <i class="fa-brands fa-square-twitter fs-4"></i>
        <i class="fa-brands fa-square-pinterest fs-4"></i>
        <i class="fa-solid fa-square-envelope fs-4"></i>
      </div>
    </div>
  </section>
</div>
